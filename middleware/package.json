{
  "name": "middleware",
  "version": "1.0.0",
  "description": "back-end demo app for Apollo's lift-off course",
  "main": "src/index.js",
  "author": "Chip Long <chip_long@yahoo.com>",
  "license": "MIT",
  "private": true,
  "scripts": {
    "dev": "tsx watch src/server.ts",
    "build": "tsc -p tsconfig.prod.json",
    "start": "node ./dist/server.js",
    "prod": "yarn start",
    "test": "vitest --passWithNoTests",
    "coverage": "vitest run --coverage --passWithNoTests",
    "generate": "graphql-codegen",
    "stage": "yarn check-format && yarn lint && yarn build && yarn coverage",
    "lint": "eslint --max-warnings=0 \"src/**/*.{js,ts}\"",
    "format": "prettier --write .",
    "check-format": "prettier --check ."
  },
  "dependencies": {
    "@apollo/datasource-rest": "^6.4.1",
    "@apollo/server": "^4.11.3",
    "@graphql-tools/merge": "^9.0.17",
    "dotenv": "^16.4.7",
    "graphql": "^16.10.0",
    "graphql-tag": "^2.12.6"
  },
  "devDependencies": {
    "@eslint/eslintrc": "^3.2.0",
    "@eslint/js": "^9.19.0",
    "@graphql-codegen/cli": "^5.0.4",
    "@graphql-codegen/typescript": "^4.1.3",
    "@graphql-codegen/typescript-resolvers": "^4.4.2",
    "@trivago/prettier-plugin-sort-imports": "^5.2.2",
    "@types/dotenv": "^8.2.3",
    "@types/node": "^22.12.0",
    "@typescript-eslint/eslint-plugin": "^8.22.0",
    "@typescript-eslint/parser": "^8.22.0",
    "@vitest/coverage-istanbul": "^3.0.4",
    "eslint": "^9.19.0",
    "eslint-plugin-lodash": "^8.0.0",
    "eslint-plugin-sonarjs": "^3.0.1",
    "globals": "^15.14.0",
    "prettier": "^3.4.2",
    "prettier-plugin-sh": "^0.14.0",
    "ts-node-dev": "^2.0.0",
    "tsx": "^4.19.2",
    "typescript": "^5.7.3",
    "vitest": "^3.0.4"
  }
}
